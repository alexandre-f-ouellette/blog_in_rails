<div class="col-md-12 post">
  <%= link_to image_tag(post.image_url, class: "img-responsive"), post %>
  <h2><%= link_to post.title, post %></h2>
  <p class="date">Post was published on: <%= post.published_date %></p>
  <p>
    Author:
    <% if post.author_id.nil? %>
      Author not currently assigned
    <% else %>
      <%= link_to post.author.name, post.author %>
    <% end %>
  </p>
  <p><%= post.body.truncate_words(100).html_safe %></p>
  <%= link_to "Read More", post, {:class => 'btn btn-primary'} %>
</div>
